<% layout("/layouts/boilerplate") %>

<style>
  .card {
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.3s ease;
  }
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.15);
  }
  .card-img-top {
    height: 200px;
    object-fit: cover;
  }
</style>

<div class="container" style="margin-top: 100px;">
  <h2 class="mb-4">My Saved Listings</h2>

  <% if (bookmarks.length === 0) { %>
    <div class="text-center text-muted my-5">
      <i class="fa-regular fa-bookmark fa-3x mb-3"></i>
      <p>You have no saved listings yet.</p>
      <a href="/listings" class="btn btn-outline-primary">Browse Listings</a>
    </div>
  <% } else { %>
    <div class="row g-4">
      <% bookmarks.forEach(listing => { %>
        <div class="col-md-4">
          <div class="card h-100 shadow-sm">
            <img src="<%= listing.image?.url || '/images/default.jpg' %>" class="card-img-top" alt="Listing image">
            <div class="card-body d-flex flex-column">
              <h5 class="fw-semibold"><%= listing.name %></h5>
              <p class="text-muted flex-grow-1"><%= listing.description %></p>
              <div class="d-flex justify-content-between mt-3">
                <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-primary">View</a>
                <form action="/listings/<%= listing._id %>/bookmark/delete" method="POST">
                  <button type="submit" class="btn btn-sm btn-outline-danger">
                    <i class="fa-solid fa-trash"></i> Remove
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>
