<% layout("/layouts/boilerplate") %>

<style>
  body {
    font-family: 'Segoe UI', sans-serif;
    scroll-behavior: smooth;
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    background: url('/images/homebg.jpg') center center/cover no-repeat;
    padding: 160px 20px 80px;
    text-align: center;
    color: #fff;
    min-height: 500px;
    overflow: hidden;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(to right, rgba(42, 115, 232, 0.85), rgba(46, 16, 82, 0.85));
    z-index: 0;
  }

  .hero-section * {
    position: relative;
    z-index: 1;
  }

    .hero-section .btn {
      border-radius: 25px;
      padding: 0.6rem 1.5rem;
      font-size: 0.95rem;
      background-color: #e6b631;
      color: white;
      font-weight: 550;
      border: none;
      transition: all 0.3s ease;
    }

  .hero-section p {
    font-size: 1.2rem;
    margin: 15px 0 30px;
    animation: fadeInUp 1s ease-in-out;
  }

  .search-bar {
    max-width: 700px;
    margin: auto;
    background: #fff;
    border-radius: 50px;
    display: flex;
    padding: 8px 15px;
    box-shadow: 0 6px 18px rgba(0,0,0,0.15);
  }

  .search-bar input {
    border: none;
    flex: 1;
    border-radius: 50px;
    padding: 12px 15px;
    outline: none;
    font-size: 1rem;
  }

  .search-bar button {
    background: #ffbb33;
    border: none;
    padding: 12px 25px;
    border-radius: 50px;
    font-weight: bold;
    transition: 0.3s;
  }

  .search-bar button:hover {
    background: #e6a600;
    transform: scale(1.05);
  }
   @media (max-width: 767px) {
    .hero-section h1 {
      font-size: 2rem;
    }

    .hero-section p {
      font-size: 1rem;
    }

    .search-bar {
      padding: 10px;
      flex-direction: column; /* Stack inputs and button vertically */
      border-radius: 25px;
    }

    .search-bar input,
    .search-bar button {
      width: 100%;
      flex: none;
    }

    .search-bar button {
      margin-top: 8px;
    }
  }
</style>

<div class="hero-section">
  <div class="container">
    <h1>Discover & Explore Nearby Services</h1>
    <p>Your one-stop platform for Bookstores, Libraries, Coaching Centers, and more</p>
    <form action="/listings" method="GET" class="search-bar">
      <input type="text" name="location" placeholder="Enter Location (e.g. Delhi)">
      <input type="text" name="search" placeholder="Search services...">
      <button type="submit">Search</button>
    </form>
  </div>
</div>
<!-- Intro Section -->
<div class="container intro-section text-center py-5">
  <h2 class="fw-bold mb-4">Welcome to EduRadar</h2>

  <!-- Desktop paragraph -->
  <p class="lead d-none d-md-block">
    We help you find educational and academic services with ease and trust. Whether you're looking for a nearby
    bookstore, a reputed coaching center, or just a peaceful library, EduRadar makes the search fast and effortless.
  </p>

  <!-- Mobile paragraph -->
  <p class="lead d-block d-md-none">
    Discover libraries, bookstores, and coaching centers near you.<br> Quick & Reliable ðŸš€
  </p>
</div>

<!-- Steps Section -->
<style>
  .steps-section {
    background: #f8f9fa;
    padding: 60px 0;
  }

  .step-box {
    text-align: center;
    padding: 30px;
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.05);
    transition: 0.3s;
  }

  .step-box:hover {
    transform: translateY(-6px);
  }

  .step-box i {
    font-size: 2.5rem;
    margin-bottom: 15px;
    color: #2A73E8;
  }
</style>

