<% layout("/layouts/boilerplate") %>
<style>
.listing-card {
  background: #fff;
  border-radius: 15px;
  box-shadow: 0 8px 20px rgba(0,0,0,0.08);
  padding: 2rem;
  margin-top: 200px!important;
}

/* Two-column layout for large screens */
.listing-row {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

@media(min-width: 992px){
  .listing-row {
    flex-direction: row;
  }
  .image-column {
    flex: 1;
    margin-right: 2rem;
  }
  .info-column {
    flex: 1;
  }
}

/* Image section */
.image-box {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  max-height: 450px;
  box-shadow: 0 6px 18px rgba(0,0,0,0.1);
  margin-top: 60px;
}

.image-box img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.image-box img:hover {
  transform: scale(1.05);
}

.fallback-text {
  font-size: 3rem;
  color: #adb5bd;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 300px;
}

/* Listing Info */
h2.fw-semibold {
  font-size: 2rem;
  font-weight: 600;
  margin-bottom: 0.3rem;
}

p.text-muted {
  font-size: 1rem;
  margin-bottom: 1rem;
}

p.text-left {
  font-size: 1.05rem;
  line-height: 1.6;
  color: #495057;
  margin-bottom: 1.5rem;
}

.list-group-item {
  border: none;
  padding: 0.7rem 0;
  display: flex;
  justify-content: space-between;
  font-size: 1rem;
}

.list-group-item strong {
  color: #495057;
}

/* Buttons */
.btn-outline-primary,
.btn-outline-danger,
.btn-success {
  border-radius: 8px;
  padding: 0.5rem 1.3rem;
  margin-right: 0.5rem;
  transition: all 0.3s ease;
}

.btn-outline-primary:hover {
  background-color: #6c5ce7;
  color: #fff;
  border-color: #6c5ce7;
}

.btn-outline-danger:hover {
  background-color: #e74c3c;
  color: #fff;
  border-color: #e74c3c;
}

.btn-success {
  background: linear-gradient(to right, #2A73E8, #2c0859);
  border: none;
  font-weight: 500;
  transition: all 0.3s ease;
}

.btn-success:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(108, 92, 231, 0.35);
}

/* Review Form */
form.needs-validation {
  background-color: #fefefe;
  padding: 1.8rem 2rem;
  border-radius: 12px;
  box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  margin-bottom: 2rem;
}

form.needs-validation h4 {
  font-size: 1.4rem;
  font-weight: 600;
  margin-bottom: 1rem;
  color: #333;
}

form.needs-validation .form-label {
  font-weight: 500;
  color: #555;
}

form.needs-validation .form-control {
  border-radius: 10px;
  border: 1.5px solid #ccc;
  padding: 0.6rem 0.8rem;
  font-size: 1rem;
  box-shadow: none;
  transition: all 0.3s ease;
}

form.needs-validation .form-control:focus {
  border-color: #6c5ce7;
  box-shadow: 0 0 0 0.15rem rgba(108, 92, 231, 0.25);
  outline: none;
}

form.needs-validation textarea.form-control {
  resize: none;
}


</style>

  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600&display=swap" rel="stylesheet">

  <div class="container py-5 mb-4 " style="font-family: 'Plus Jakarta Sans', sans-serif;">
    <div class="row justify-content-center">
      <div class="col-md-10 col-lg-8">

        <!-- Image Section -->
        <div class="image-box">
          <% if (listing.image && listing.image.url) { %>
            <img src="<%= listing.image.url %>" alt="Listing Image" class="img-fluid rounded shadow-sm"
              style="max-width: 90%; max-height: 400px;"
              onerror="this.style.display='none'; this.parentElement.innerHTML='<div class=\'fallback-text text-center\'><span>ðŸ“¦</span><br>No image available</div>';">
            <% } else { %>
              <div class="fallback-text text-muted text-center py-4 border rounded">ðŸ“¦<br>No image available</div>
              <% } %>
        </div>

        <!-- Listing Details -->
        <h2 class="fw-semibold text-left">
          <%= listing.title %>
        </h2>
        <p class="text-muted text-left mb-2">
          <%= listing.location %>
        </p>
        <p class="text-left">
          <%= listing.description %>
        </p>

        <ul class="list-group list-group-flush mb-3">
          <li class="list-group-item"><strong>Business Name:</strong>
            <%= listing.name %>
          </li>
          <li class="list-group-item"><strong>Category:</strong>
            <%= listing.category %>
          </li>
          <li class="list-group-item"><strong>Opening Hours:</strong>
            <%= listing.openHours %>
          </li>
          <li class="list-group-item"><strong>Contact:</strong>
            <%= listing.contact %>
          </li>
          <% if (listing.alternateContact) { %>
            <li class="list-group-item"><strong>Alternate Contact:</strong>
              <%= listing.alternateContact %>
            </li>
            <% } %>
              <% if (listing.whatsappNumber) { %>
                <li class="list-group-item"><strong>WhatsApp:</strong>
                  <%= listing.whatsappNumber %>
                </li>
                <% } %>
                  <li class="list-group-item"><strong>Email:</strong>
                    <%= listing.email %>
                  </li>
                  <% if (listing.website) { %>
                    <li class="list-group-item"><strong>Website:</strong> <a href="<%= listing.website %>"
                        target="_blank">
                        <%= listing.website %>
                      </a></li>
                    <% } %>
                      <% if (listing.googleMapLink) { %>
                        <li class="list-group-item"><strong>Google Map:</strong> <a href="<%= listing.googleMapLink %>"
                            target="_blank">View Location</a></li>
                        <% } %>
                          <% if (listing.facebookPage) { %>
                            <li class="list-group-item"><strong>Facebook:</strong> <a href="<%= listing.facebookPage %>"
                                target="_blank">
                                <%= listing.facebookPage %>
                              </a></li>
                            <% } %>
                              <% if (listing.instagramPage) { %>
                                <li class="list-group-item"><strong>Instagram:</strong> <a
                                    href="<%= listing.instagramPage %>" target="_blank">
                                    <%= listing.instagramPage %>
                                  </a></li>
                                <% } %>
        </ul>

        <!-- Owner Actions -->
        <% if (currentUser && currentUser.role.includes('vendor') && listing.owner &&
          currentUser._id.toString()===listing.owner.toString()) { %>
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary">Edit</a>
          <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button class="btn btn-outline-danger">Delete</button>
          </form>
          <% } %>

            <!-- Review Form -->
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
              <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>

              <div class="mb-3 mt-3">
                <label for="comment">Comment</label>
                <textarea class="form-control" name="review[comment]" rows="3" required></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a comment.</div>
              </div>

              <button type="submit" class="btn btn-success mt-2">Submit Review</button>

            </form>
            <hr />
            <% if(listing.reviews.length>0) { %>
              <h5><strong>All Reviews</strong></h5>
              <% for (let review of listing.reviews) { %>
                <div class="card mb-3 mt-3">
                  <div class="card-body">
                    <h5 class="card-title">@<%= review.author.username %>
                    </h5>
                    <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                    <p class="card-text">
                      <%= review.comment %>
                    </p>
                    <% if (currentUser && review.author && currentUser._id.toString()===review.author._id.toString()) {
                      %>
                      <form method="POST"
                        action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                      </form>
                      <% } %>

                  </div>
                </div>
                <% } %>
                  <% } %>

      </div>
    </div>
  </div>