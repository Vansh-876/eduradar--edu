      <p>Find coaching, libraries, cyber cafes, stationery stores, and more.</p>
    </div>

    <!-- Filters buttons -->
    <div class="filters-buttons">
      <a href="/listings" class="filter">
        <i class="fa-solid fa-globe"></i>
        <p>All</p>
      </a>
      <a href="/listings?category=Coaching" class="filter">
        <i class="fa-solid fa-chalkboard-user"></i>
        <p>Coaching</p>
      </a>
      <a href="/listings?category=Cyber Cafe" class="filter">
        <i class="fa-solid fa-computer"></i>
        <p>Cyber Cafe</p>
      </a>
      <a href="/listings?category=Library" class="filter">
        <i class="fa-solid fa-book-open"></i>
        <p>Library</p>
      </a>
      <a href="/listings?category=Stationery" class="filter">
        <i class="fa-solid fa-pencil-ruler"></i>
        <p>Stationery</p>
      </a>
      <a href="/listings?category=Bookstore" class="filter">
        <i class="fa-solid fa-book"></i>
        <p>Bookstore</p>
      </a>
      <a href="/listings?category=Institution" class="filter">
        <i class="fa-solid fa-school"></i>
        <p>Institution</p>
      </a>
    </div>
  </div>
</section>



  <div class="container-fluid px-3 listings-container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
      <% allListings.forEach(listing=> { %>
        <div class="col">
          <div class="card h-100 shadow-sm" style="border-radius: 1rem; overflow: hidden;">

            <!-- Image -->
            <div class="img-container" style="height: 16rem; overflow: hidden;">
              <% if (listing.image && listing.image.url) { %>
                <img src="<%= listing.image.url %>" alt="Listing Image"
                  style="width: 100%; height: 100%; object-fit: cover;">
                <% } else { %>
                  <div class="fallback-text text-muted text-center py-5">ðŸ“¦<br>No image available</div>
                  <% } %>
            </div>

            <!-- Content -->
            <div class="card-body py-3 px-3">
              <h6 class="fw-semibold mb-1">
                <%= listing.name %>
              </h6>
              <p class="text-muted mb-1" style="font-size: 13px;">
                <%= listing.location %>
              </p>
              <p class="mb-2" style="font-size: 13px;">
                <%= listing.description %>
              </p>
<div class="d-flex justify-content-between align-items-center">
<div>
  <% const avg = parseFloat(listing.avgRating) || 0; %>
  <% for(let i=1; i<=5; i++) { %>
    <% if(i <= Math.floor(avg)) { %>
      <i class="fa fa-star" style="color: gold;"></i>
    <% } else if(i === Math.floor(avg) + 1 && (avg - Math.floor(avg)) >= 0.5) { %>
      <i class="fa-solid fa-star-half" style="color: gold;"></i>
    <% } else { %>
      <i class="fa-regular fa-star"></i>  <!-- vacant star -->
    <% } %>
  <% } %>
  <span><%= avg %></span>
</div>


  <div class="d-flex gap-2">
   <% if (currentUser) { %>
  <% if (!currentUser.role.includes('vendor')) { %>
    <!-- Normal users only -->
    <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-primary">View</a>

    <% if (currentUser.bookmarks && currentUser.bookmarks.some(b => b._id.toString() === listing._id.toString())) { %>
      <button class="btn btn-sm btn-success" disabled title="Saved">
        <i class="fa-solid fa-bookmark"></i>
      </button>
    <% } else { %>
      <form class="bookmark-form" data-id="<%= listing._id %>" style="display:inline;">
        <button type="submit" class="btn btn-sm btn-outline-warning" title="Save">
          <i class="fa-regular fa-bookmark"></i>
        </button>
      </form>
    <% } %>
  <% } else { %>
    <!-- Vendor ko sirf view ka option -->
    <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-outline-primary">View</a>
  <% } %>
<% } else { %>
  <a href="/login" class="btn btn-sm btn-outline-primary">View</a>
<% } %>

  </div>
</div>

            </div>

          </div>
        </div>

        <% }) %>
    </div>
  </div>

  <script>
document.querySelectorAll('.bookmark-form').forEach(form => {
  form.addEventListener('submit', async function (e) {
    e.preventDefault(); // Stop normal form submit

    const listingId = this.getAttribute('data-id');
    const button = this.querySelector('button');

    try {
      const res = await fetch(`/listings/${listingId}/bookmark`, {
        method: 'POST',
        headers: {
          'X-Requested-With': 'XMLHttpRequest'
        }
      });

     if (res.ok) {
  button.innerHTML = '<i class="fa-solid fa-bookmark"></i>';
  button.classList.remove('btn-outline-warning');
  button.classList.add('btn-success');
  button.disabled = true;
} else {
        alert('Error saving listing');
      }
    } catch (err) {
      console.error(err);
      alert('Something went wrong!');
    }
  });
});
</script>

<!-- EduRadar Scroll Popup -->
<div id="businessPopup" class="popup-overlay">
  <div class="popup-content">
    <span class="close-btn">&times;</span>
    <div class="popup-header">
      <h2>Grow Your Business with EduRadar</h2>
      <p>Reach thousands of students nearby by listing your services on EduRadar. Start growing your business today!</p>
    </div>

    <a href="/vendor/register" id="addBusinessBtn">Add Your Business</a>
  </div>
</div>

<style>
  /* ---------- POPUP OVERLAY ---------- */
  .popup-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.6);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    padding: 1rem;
  }

  .popup-content {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    max-width: 400px;
    width: 100%;
    color:linear-gradient(100deg,  #2A73E8, #2c0859);
    text-align: center;
    box-shadow: 0 15px 40px rgba(0,0,0,0.3);
    position: relative;
  }

  .popup-content h2 {
    font-size: 1.8rem;
    font-weight: bold;
    background: linear-gradient(100deg, #2A73E8, #2c0859);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

  .popup-content p {
    font-size: 1rem;
    margin-bottom: 3.5rem;
    line-height: 1.8;
  }

  .popup-content input {
    width: 80%;
    padding: 0.7rem;
    margin-bottom: 1rem;
    border-radius: 10px;
    border: none;
    outline: none;
    font-size: 1rem;
  }

  .popup-content a {
    background-color:  #fbc531;
    color: #000;
    text-decoration: none;
    border: none;
    padding: 0.8rem 1.5rem;
    font-size: 1rem;
    border-radius: 10px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .popup-content a:hover {
    background-color:  #e6b022;
  }

  .close-btn {
    position: absolute;
    top: 0.8rem;
    right: 1rem;
    font-size: 1.5rem;
    cursor: pointer;
    color: rgb(1, 0, 0);
  }

  /* Responsive */
  @media (max-width: 500px) {
    .popup-content h2 {
      font-size: 1.4rem;
    }
    .popup-content p {
      font-size: 0.9rem;
    }
    .popup-content input {
      width: 100%;
    }
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const popup = document.getElementById('businessPopup');
    const closeBtn = document.querySelector('.close-btn');

    // Check if user/vendor is logged in from EJS
    const userLoggedIn = <%= currentUser ? 'true' : 'false' %>;

    if (!userLoggedIn) {
      // Show popup on scroll
      const showPopupOnScroll = () => {
        if (window.scrollY > 1000) { // adjust scroll position if needed
          popup.style.display = 'flex';
          window.removeEventListener('scroll', showPopupOnScroll);
        }
      };
      window.addEventListener('scroll', showPopupOnScroll);
    }

    closeBtn.addEventListener('click', () => {
      popup.style.display = 'none';
    });
  });
</script>
