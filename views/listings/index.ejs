<% layout("/layouts/boilerplate") %>

<style>
  /* ---------- MODERN FILTER SECTION ---------- */
  .filters-section {
    display: flex;
    margin-top: 70px;
    justify-content: center;
    padding: 3rem 1rem 2rem;
    background: white;
  }

  .filters-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.2rem;
    background: #fff;
    border-radius: 2rem;
    padding: 2rem 2.5rem;
    max-width: 850px;
    width: 90%;
    box-shadow: 0 10px 35px rgba(77, 125, 236, 0.12);
    transition: all 0.3s ease;
  }

  .filters-container:hover {
    transform: translateY(-3px);
    box-shadow: 0 14px 40px rgba(99, 158, 247, 0.18);
  }

  .filters-heading {
    text-align: center;
  }

  .filters-heading h2 {
    font-size: 1.8rem;
    font-weight: 700;
    color: #222;
    margin: 0;
  }

  .filters-heading p {
    font-size: 0.95rem;
    color: #555;
    margin: 0.3rem 0 0 0;
  }

  .filters-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.7rem;
    width: 100%;
  }

  .filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-width: 75px;
    padding: 0.55rem 1rem;
    border-radius: 50px;
    font-size: 0.85rem;
    color: #555;
    background: #f2f2f2;
    gap: 0.3rem;
    text-decoration: none !important;
    transition: all 0.3s ease;
  }

  .filter i {
    font-size: 1.2rem;
    transition: transform 0.3s ease;
  }

  .filter p {
    margin: 0;
    font-size: 0.75rem;
  }

  .filter:hover {
    opacity: 1;
    background: #2a73e8;
    color: #fff !important;
  }

  .filter:hover i {
    transform: scale(1.2) rotate(-10deg);
  }
.listings-container {
  margin-top: 2rem;
  margin-bottom: 3rem;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .filters-container {
    padding: 1.5rem 1.5rem;
    }
    .filters-heading h2 {
      font-size: 1.5rem;
    }
    .filters-heading p {
      font-size: 0.85rem;
    }
    .filter {
      min-width: 60px;
      padding: 0.45rem 0.8rem;
      font-size: 0.75rem;
    }
    .filter i {
      font-size: 1rem;
    }
    .filter p {
      font-size: 0.65rem;
    }
  }

  @media (max-width: 480px) {
    .filters-container {
      padding: 1rem 1rem;
    }
    .filters-heading h2 {
      font-size: 1.3rem;
    }
    .filters-heading p {
      font-size: 0.75rem;
    }
    .filter {
      min-width: 55px;
      padding: 0.35rem 0.7rem;
      font-size: 0.65rem;
    }
    .filter i {
      font-size: 0.9rem;
    }
    .filter p {
      font-size: 0.6rem;
    }
  }
</style>

<section class="filters-section">
  <div class="filters-container">
