<style>
  .modern-footer {
    background: #0c0c0c;
    color: #bbb;
    padding: 60px 20px 30px;
    font-family: "Segoe UI", sans-serif;
  }

  .footer-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    max-width: 1250px;
    margin: auto;
  }

  .footer-col h4 {
    color: #fff;
    margin-bottom: 18px;
    font-size: 1.25rem;
    font-weight: 600;
    position: relative;
  }

  .footer-col h4::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 40px;
    height: 3px;
    background: #0d6efd;
    border-radius: 2px;
  }

  .footer-col ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-col ul li {
    margin: 12px 0;
  }

  .footer-col ul li a {
    color: #bbb;
    text-decoration: none;
    transition: color 0.3s ease, padding-left 0.3s ease;
    font-size: 0.95rem;
  }

  .footer-col ul li a:hover {
    color: #0d6efd;
    padding-left: 4px;
  }

  .logo-col h2 {
    color: #0d6efd;
    font-size: 1.8rem;
    font-weight: 700;
    margin-bottom: 12px;
  }

  .logo-col p {
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 18px;
    color: #aaa;
  }

  .social-icons {
    display: flex;
    gap: 14px;
    margin-top: 10px;
  }

  .social-icons a {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: #1a1a1a;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #bbb;
    font-size: 1.3rem;
    transition: all 0.3s ease;
  }

  .social-icons a:hover {
    background: #0d6efd;
    color: #fff;
    transform: translateY(-3px);
  }

  .newsletter-form {
    display: flex;
    gap: 10px;
    margin: 10px 0 14px;
    flex-wrap: wrap;
  }

  .newsletter-form input {
    flex: 1;
    min-width: 220px;
    padding: 12px 14px;
    border: 1.5px solid #333;
    border-radius: 8px;
    background-color: #161616;
    color: #eee;
    font-size: 0.95rem;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .newsletter-form input::placeholder {
    color: #888;
  }

  .newsletter-form input:focus {
    outline: none;
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.18rem rgba(13, 110, 253, 0.25);
  }

  .newsletter-form button {
    background: #0d6efd;
    color: white;
    padding: 12px 16px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.3s ease, transform 0.2s ease;
  }

  .newsletter-form button:hover {
    background: #0b5ed7;
    transform: translateY(-2px);
  }

  .footer-bottom {
    border-top: 1px solid #222;
    text-align: center;
    padding-top: 20px;
    margin-top: 40px;
    font-size: 0.9rem;
    color: #888;
  }

  @media (max-width: 768px) {
    .footer-col {
      text-align: center;
    }

    .footer-col h4::after {
      left: 50%;
      transform: translateX(-50%);
    }

    .social-icons {
      justify-content: center;
    }

    .newsletter-form {
      justify-content: center;
    }
  }
</style>

