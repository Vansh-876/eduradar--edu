<% layout("/layouts/boilerplate") %>

<div class="container my-5 mt-5 pt-5 mb-5">
  <h2 class="mb-4 fw-bold text-center">Vendor Dashboard</h2>

  <div class="row g-4">
    <!-- Profile Card -->
    <div class="col-md-4">
      <div class="card shadow rounded-4 text-center p-3">
        <img src="<%= user.profileImage?.url || '/images/default-profile.jpg' %>" alt="Vendor" class="rounded-circle mx-auto" width="100" height="100">
        <h5 class="mt-3"><%= user.username %></h5>
        <p class="text-muted"><%= user.email %></p>
        <a href="/profile/settings" class="btn btn-outline-primary btn-sm mt-2">Edit Profile</a>
      </div>
    </div>

    <!-- Quick Actions -->
    <div class="col-md-8">
      <div class="row g-3">
        <div class="col-md-6">
          <div class="card shadow p-3 rounded-4 text-center h-100">
            <h6 class="fw-bold"> Add New Listing</h6>
            <p class="text-muted small">Add your business or service for students</p>
            <a href="/listings/new" class="btn btn-success btn-sm">Add Listing</a>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card shadow p-3 rounded-4 text-center h-100">
            <h6 class="fw-bold"> My Listings</h6>
            <p class="text-muted small">View, edit or remove your listings</p>
            <a href="/vendor/my-listings" class="btn btn-primary btn-sm">View Listings</a>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card shadow p-3 rounded-4 text-center h-100">
            <h6 class="fw-bold">Notifications</h6>
            <p class="text-muted small">See new bookings or updates</p>
            <a href="/notifications" class="btn btn-warning btn-sm">View Notifications</a>
          </div>
        </div>

        <div class="col-md-6">
          <div class="card shadow p-3 rounded-4 text-center h-100">
            <h6 class="fw-bold">Settings</h6>
            <p class="text-muted small">Manage your profile & password</p>
            <a href="/profile/settings" class="btn btn-secondary btn-sm">Go to Settings</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
