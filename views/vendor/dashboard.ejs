<% layout("/layouts/boilerplate") %>

<style>
  body {
    font-family: 'Inter', sans-serif;
    background: #f3f7f5;
    color: #1c2d27;
  }

  .dashboard-container {
    max-width: 1400px;
    margin: 80px auto;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 35px;
  }

  /* Header / Greeting */
  .dashboard-header {
    background: linear-gradient(to right, #2A73E8, #2c0859);
    color: #fff;
    padding: 30px 25px;
    border-radius: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 12px 35px rgba(42,115,232,0.25);
    flex-wrap: wrap;
    gap: 15px;
  }

  .dashboard-header h2 {
    margin: 0;
    font-size: 2rem;
    font-weight: 700;
  }

  .dashboard-header p {
    margin: 5px 0 0 0;
    opacity: 0.9;
  }

  .dashboard-header a {
    background: #fff;
    color: #2A73E8;
    font-weight: 600;
    padding: 8px 18px;
    border-radius: 12px;
    text-decoration: none!important;
    transition: 0.3s;
  }

  .dashboard-header a:hover {
    background: #2A73E8;
    color: #fff;
  }

  /* Stats Section */
  .stats-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 25px;
  }

  .stat-card {
    background: #fff;
    border-radius: 18px;
    padding: 25px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.06);
    transition: 0.3s ease;
    text-align: center;
  }

  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 28px rgba(0,0,0,0.12);
  }

  .stat-icon {
    font-size: 2rem;
    color: #2A73E8;
    margin-bottom: 12px;
  }

  .stat-card h5 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: #2c0859;
  }

  .stat-card .number {
    font-size: 1.6rem;
    font-weight: bold;
    margin-top: 6px;
  }

  .progress-bar-container {
    width: 100%;
    height: 6px;
    background: #f0f0f0;
    border-radius: 10px;
    margin-top: 10px;
  }

  .progress-bar {
    height: 6px;
    background: linear-gradient(to right, #2A73E8, #2c0859);
    border-radius: 10px;
    width: 0;
    transition: 1s ease;
  }

  /* Quick Actions */
  .quick-actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 25px;
  }

  .action-card {
    background: linear-gradient(135deg, #ffffff, #f2f8f5);
    border-radius: 18px;
    padding: 25px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: 0.3s;
    text-align: center;
  }

  .action-card:hover {
    transform: scale(1.03);
    box-shadow: 0 12px 25px rgba(0,0,0,0.1);
  }

  .action-card h6 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: #2c0859;
  }

  .action-card p {
    font-size: 0.9rem;
    color: #444;
    margin-bottom: 15px;
  }

  .action-card a {
    background: linear-gradient(to right, #2A73E8, #2c0859);
    color: #fff;
    padding: 8px 18px;
    border-radius: 10px;
    font-weight: 500;
    text-decoration: none!important;
    transition: 0.3s;
    display: inline-block;
  }

  .action-card a:hover {
    opacity: 0.85;
  }

  /* Recent Listings */
  .recent-listings {
    background: #fff;
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.06);
  }

  .recent-listings h4 {
    margin-bottom: 20px;
    font-weight: 700;
    color: #2c0859;
  }

  .listing-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    padding: 15px 0;
    flex-wrap: wrap;
    gap: 10px;
  }

  .listing-details {
    display: flex;
    gap: 15px;
    align-items: center;
    flex: 1 1 auto;
  }

  .listing-details img {
    width: 65px;
    height: 65px;
    object-fit: cover;
    border-radius: 12px;
  }

  .listing-info h5 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
  }

  .listing-info small {
    color: #666;
  }

  .listing-actions {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .btn-edit {
    background: #2A73E8;
    color: #fff;
    padding: 6px 14px;
    border-radius: 8px;
    font-size: 0.85rem;
    text-decoration: none;
  }

  .btn-delete {
    background: #e55353;
    color: #fff;
    border: none;
    padding: 6px 14px;
    border-radius: 8px;
    font-size: 0.85rem;
  }

  /* Responsive */
  @media(max-width: 992px) {
    .stats-row, .quick-actions {
      grid-template-columns: 1fr;
    }
    .dashboard-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }
    .listing-item {
      flex-direction: column;
      align-items: flex-start;
    }
    .listing-actions {
      justify-content: flex-start;
    }
  }

  @media(max-width: 480px) {
    .dashboard-header h2 {
      font-size: 1.5rem;
    }
    .dashboard-header p {
      font-size: 0.9rem;
    }
  }
</style>

<div class="dashboard-container">
  <!-- Header -->
  <div class="dashboard-header">
    <div>
      <h2>Welcome back, <%= user ? user.username : 'Guest' %> ðŸ‘‹</h2>
      <p>Hereâ€™s a quick overview of your business insights.</p>
    </div>
    <div>
      <a href="/profile/settings">Edit Profile</a>
    </div>
  </div>

  <!-- Stats -->
  <div class="stats-row">
    <div class="stat-card">
      <div class="stat-icon"><i class="fas fa-list"></i></div>
      <h5>Total Listings</h5>
      <div class="number"><%= listings.length %></div>
      <div class="progress-bar-container"><div class="progress-bar" style="width: 75%;"></div></div>
    </div>
    <div class="stat-card">
      <div class="stat-icon"><i class="fas fa-bookmark"></i></div>
      <h5>Bookings</h5>
      <div class="number">47</div>
      <div class="progress-bar-container"><div class="progress-bar" style="width: 60%;"></div></div>
    </div>
    <div class="stat-card">
      <div class="stat-icon"><i class="fas fa-star"></i></div>
      <h5>Avg. Rating</h5>
      <div class="number">4.8â˜…</div>
      <div class="progress-bar-container"><div class="progress-bar" style="width: 90%;"></div></div>
    </div>
    <div class="stat-card">
      <div class="stat-icon"><i class="fas fa-users"></i></div>
      <h5>Monthly Visitors</h5>
      <div class="number">1.2k</div>
      <div class="progress-bar-container"><div class="progress-bar" style="width: 80%;"></div></div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="quick-actions">
    <div class="action-card">
      <h6>Add New Listing</h6>
      <p>Post your coaching or education-related service.</p>
      <a href="/listings/new">+ Add Now</a>
    </div>
    <div class="action-card">
      <h6>Notifications</h6>
      <p>Check bookings, reviews, alerts & messages.</p>
      <a href="/notifications">View</a>
    </div>
    <div class="action-card">
      <h6>Account Settings</h6>
      <p>Update your profile details and preferences.</p>
      <a href="/profile/settings">Manage</a>
    </div>
  </div>

  <!-- Recent Listings -->
  <div class="recent-listings">
    <h4>Recent Listings</h4>
    <% listings.slice(0, 5).forEach(listing => { %>
      <div class="listing-item">
        <div class="listing-details">
          <img src="<%= listing.image.url %>" alt="listing">
          <div class="listing-info">
            <h5><%= listing.title %></h5>
            <small><%= listing.location %> â€¢ <%= listing.category %></small>
          </div>
        </div>
        <div class="listing-actions">
          <a href="/listings/<%= listing._id %>/edit" class="btn-edit">Edit</a>
          <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button class="btn-delete" onclick="return confirm('Are you sure?')">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<script>
  // Animate progress bars
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.progress-bar').forEach(bar => {
      let width = bar.style.width;
      bar.style.width = '0';
      setTimeout(() => { bar.style.width = width; }, 300);
    });
  });
</script>
