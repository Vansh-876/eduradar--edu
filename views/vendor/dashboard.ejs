<% layout("/layouts/boilerplate") %>

<style>
  body {
    font-family: 'Inter', sans-serif;
    background: #f3f7f5;
    color: #1c2d27;
  }

  .dashboard-container {
    max-width: 1280px;
    margin: 70px auto;
    padding: 30px 20px;
  }

  /* Header / Greeting */
  .dashboard-header {
    background: rgba(0, 62, 41, 0.95);
    color: #fff;
    padding: 35px;
    border-radius: 20px;
    margin-top: 60px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 12px 35px rgba(0, 62, 41, 0.25);
  }

  .dashboard-header h2 {
    margin: 0;
    font-size: 2rem;
    font-weight: 700;
  }

  .dashboard-header p {
    margin-top: 8px;
    opacity: 0.9;
  }

  .dashboard-header a {
    background: white;
    color: #003e29;
    font-weight: 600;
    padding: 8px 18px;
    border-radius: 10px;
    transition: 0.3s;
  }

  .dashboard-header a:hover {
    background: #467061;
    color: white;
  }

  /* Stats Section */
  .stats-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 25px;
    margin: 40px 0;
  }

  .stat-card {
    background: white;
    border-radius: 18px;
    padding: 25px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.06);
    transition: 0.3s ease;
    text-align: center;
    position: relative;
  }

  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 28px rgba(0,0,0,0.12);
  }

  .stat-icon {
    font-size: 2rem;
    color: #003e29;
    margin-bottom: 12px;
  }

  .stat-card h5 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
    color: #003e29;
  }

  .stat-card .number {
    font-size: 1.6rem;
    font-weight: bold;
    margin-top: 6px;
  }

  /* Quick Actions */
  .quick-actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 25px;
    margin: 40px 0;
  }

  .action-card {
    background: linear-gradient(135deg, #ffffff, #f2f8f5);
    border-radius: 18px;
    padding: 25px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    transition: 0.3s;
  }

  .action-card:hover {
    transform: scale(1.02);
    box-shadow: 0 12px 25px rgba(0,0,0,0.1);
  }

  .action-card h6 {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: #003e29;
  }

  .action-card p {
    font-size: 0.9rem;
    color: #444;
    margin-bottom: 15px;
  }

  .action-card a {
    background: #003e29;
    color: white;
    padding: 6px 14px;
    border-radius: 10px;
    font-size: 0.85rem;
    font-weight: 500;
    transition: 0.3s;
  }

  .action-card a:hover {
    background: #467061;
  }

  /* Recent Listings */
  .recent-listings {
    background: white;
    border-radius: 20px;
    padding: 30px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.06);
  }

  .recent-listings h4 {
    margin-bottom: 20px;
    font-weight: 700;
    color: #003e29;
  }

  .listing-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    padding: 15px 0;
  }

  .listing-item:last-child {
    border-bottom: none;
  }

  .listing-details {
    display: flex;
    gap: 15px;
    align-items: center;
  }

  .listing-details img {
    width: 65px;
    height: 65px;
    object-fit: cover;
    border-radius: 12px;
  }

  .listing-info h5 {
    margin: 0;
    font-size: 1rem;
    font-weight: 600;
  }

  .listing-info small {
    color: #666;
  }

  .listing-actions a,
  .listing-actions button {
    margin-left: 8px;
    padding: 6px 12px;
    border-radius: 8px;
    font-size: 0.8rem;
  }

  .btn-edit {
    background: #f6c343;
    color: #222;
  }

  .btn-delete {
    background: #e55353;
    color: white;
    border: none;
  }

  /* ---------------------- Responsive Dashboard ---------------------- */
@media (max-width: 992px) {
  .dashboard-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 15px;
  }

  .dashboard-header h2 {
    font-size: 1.5rem;
  }

  .dashboard-header p {
    font-size: 0.9rem;
  }
}

@media (max-width: 768px) {
  .stats-row {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .quick-actions {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  .recent-listings .listing-item {
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
  }

  .listing-details {
    gap: 10px;
    width: 100%;
  }

  .listing-details img {
    width: 100%;
    max-width: 150px;
    height: auto;
  }

  .listing-actions {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    gap: 10px;
  }

  .action-card h6 {
    font-size: 1rem;
  }

  .action-card p {
    font-size: 0.85rem;
  }

  .stat-card h5 {
    font-size: 0.95rem;
  }

  .stat-card .number {
    font-size: 1.4rem;
  }
}

@media (max-width: 480px) {
  .dashboard-container {
    padding: 20px 15px;
  }

  .dashboard-header {
    padding: 25px;
    border-radius: 15px;
  }

  .action-card {
    padding: 20px;
    border-radius: 15px;
  }

  .recent-listings {
    padding: 20px;
    border-radius: 15px;
  }
}

</style>


